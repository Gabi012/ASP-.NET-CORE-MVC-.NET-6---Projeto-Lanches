@model Lanche

<div class="contrainer">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="">
            </div>            
            <div class="card-block">
                <h5 class="card-title">@Model.Nome</h5>
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>
                <p class="btn btn-group align-content-lg-end">
                <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">Ver todos os Lanches</a>    
                <a class="btn btn-primary" id="cartButton" 
                    asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" 
                    asp-route-lancheid="@Model.LancheId">Adicionar @Model.Nome ao Carrinho</a>
                </p>
            </div>
        </div>
    </div>
</div>

